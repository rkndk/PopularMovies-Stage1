<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_watch_trailer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/colorBlueGrey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_trailer_icon"
            android:layout_width="@dimen/trailer_play_size"
            android:layout_height="@dimen/trailer_play_size"
            android:contentDescription="@string/trailer_button_text"
            android:src="@drawable/ic_play"
            android:background="@color/colorRed"/>
        <TextView
            android:id="@+id/tv_trailer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trailer_button_text"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

</android.support.v7.widget.CardView>